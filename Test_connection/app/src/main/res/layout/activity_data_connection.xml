<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.star.test_connection.Data_connection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Test"
            android:textSize="15sp" />
        <Button
            android:id="@+id/server_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AsService"
            android:textSize="12sp"
            android:layout_below="@id/title"
            />
        <Button
            android:id="@+id/client_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AsClient"
            android:textSize="12sp"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/server_btn"
            android:layout_toRightOf="@id/server_btn"/>
        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:singleLine="false"
            android:hint="@string/hint_msg"
            android:textSize="15sp"
            android:selectAllOnFocus="true"
            android:layout_below="@id/server_btn"/>
        <Button
            android:id="@+id/send_btn"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Send"
            android:textSize="12sp"
            android:layout_below="@id/edit"
            />
        <ListView
            android:id="@+id/connect_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_btn">

        </ListView>
    </RelativeLayout>

    <ListView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:divider="#aaaaaa"
        android:dividerHeight="0dp"
        ></ListView>
</LinearLayout>
